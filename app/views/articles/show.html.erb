<% if @article.user %>
<ul class="listing">
	<div class="row" align="center">
		<div class="col-md-4 col-md-offset-4">
			<li><%= link_to gravatar_for(@article.user),
				user_path(@article.user) %></li>
			<li class="article-title"><%= link_to @article.user.username,
				user_path(@article.user) %></li>
			<li><small><%= pluralize(@article.user.articles.count,
				"article") if @article.user.articles %></small></li>
		</div>
	</div>
</ul>
<% end %>
</div>
<div class="container text-center">	
	<h1>Showing Article</h1>
	<table class="table table-hover">
		<tr>
			<th >Title:</th>
			<td ><%= @article.title%>
		</tr>
		<tr>
			<th >Description:</th>
			<td ><%= @article.description%></td>
		</tr>
		<tr>
			<td colspan="2">
				
				<%= link_to 'Back', articles_path, class: "btn btn-info" %> |
				<%= link_to "Edit", edit_article_path(@article),class: "btn btn-xs btn-primary" %> |
				<%= link_to 'Delete', article_path(@article), method: :delete, data: {confirm: "Are you suure?"},class: "btn btn-danger" %>
			</td>
		</tr>
	</table>
</div>
