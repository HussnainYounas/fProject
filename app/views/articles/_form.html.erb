<%#= render 'shared/errors', obj: @article %>
<div class="row">
	<div class="col-md-8 offset-2">
	<%= form_for(@article, :remote => remote.eql?(nil) ? false : true , :html => {class: "form-horizontal", role: "form"}) do |f| %>
			<div class="form-group">
				<div class="control-label  col-sm-2">
					<%= f.label :title %>
				</div>
				<div class="col-sm-12 col-md-22  ">
					<%= f.text_field :title, class: "form-control", placeholder:
					"Title of article", autofocus: true %>
					
				</div>
			</div>
			<div class="form-group">
				<div class="control-label col-sm-2">
					<%= f.label :description %>
				</div>
				<div class="col-sm-12">
					<%= f.text_area :description, rows: 10, class: "form-control",
					placeholder: "Body of article" %>
				</div>
			</div>
			<div class="form-group">
				<div class="col-sm-offset-2 col-sm-10">
					<%= f.submit class: 'btn btn-success ' %> |
					<%= link_to 'Back', articles_path, class: "btn btn-primary" %>
				</div>
			</div>
		<% end %>
	</div>
</div>