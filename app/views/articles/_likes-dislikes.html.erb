<% pre_like = @article.likes.find { |like| like.user_id == current_user.id } %>
<% if pre_like %>
<%= link_to ' Unlike', article_like_path(@article, pre_like), method: :delete, class: "btn btn-info glyphicon glyphicon-thumbs-down",remote: true %>
<% else %>
<%= link_to ' Like', article_likes_path(@article), method: :post, class: "btn btn-info glyphicon glyphicon-thumbs-up", remote: true %>
<% end %>
<%= @article.likes.count %> <%= (@article.likes.count) == 1 ? 'Like' : 'Likes'%>