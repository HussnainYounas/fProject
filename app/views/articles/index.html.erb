 <link href="https://netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap-glyphicons.css" rel="stylesheet">

<div class="container text-center">	
	<h1>Index Page</h1>
	<p>
		<% if current_user != nil %>
		<%= link_to "Create Article", "", data: {toggle: "modal", target: "#exampleModal"}  %>
		<% end %>
		<%#= link_to 'Create Article', new_article_path%>
	</p>
		<table border="1" class="table table-hover">
			<thead>	
				<tr class="bg-secondary">	
					<th>Title</th>
					<th>Description</th>
					<th colspan="3">Actions</th>
					<th >Created</th>
				</tr>
			</thead> 
			<tbody class="articles">
				<%= render 'articles', abc: @articles %>
			</tbody>
		</table> 
	</div>
	<div id="edit_article">
	</div>
<div class="offset-9">
	<%= will_paginate %>
</div>
</div>